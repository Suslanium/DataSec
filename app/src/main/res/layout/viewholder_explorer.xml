<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/modDate"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/ubuntu" />

    <TextView
        android:id="@+id/fileName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/ubuntu"
        android:gravity="center|left"
        android:singleLine="true"
        android:textSize="24sp" />

    <Button
        android:id="@+id/fileButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="85dp"
        android:alpha="0" />

    <Button
        android:id="@+id/checkBoxButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center|end"
        android:background="#FFFFFFFF"
        android:backgroundTint="#00000000"
        android:foreground="?attr/colorSurface"
        android:stateListAnimator="@null"/>

    <CheckBox
        android:id="@+id/fileCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:checked="false"
        android:clickable="false"
        android:scaleX="1.70"
        android:scaleY="1.70"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-5dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <ImageView
            android:id="@+id/fileImage"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@android:drawable/list_selector_background"
            app:tint="?attr/explorerIconColor" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/isEncrypted"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_baseline_lock_24"
        app:tint="?attr/colorSurface"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/fileSize"
        android:layout_width="90dp"
        android:layout_height="17dp"
        android:layout_gravity="end"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="65dp"
        android:fontFamily="@font/ubuntu"
        android:gravity="end" />

</FrameLayout>